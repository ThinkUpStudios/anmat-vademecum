<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="android:actionMenuTextColor">@color/anmat_azul_grisado</item>
        <item name="android:textColorPrimary">@color/anmat_azul</item>
        <item name="android:windowBackground">@color/anmat_background</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <item name="android:background">@color/actionbar_background</item>

    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/anmat_gris</item>

    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/anmat_azul</item>

    </style>
    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText"
        parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/anmat_azul</item>
    </style>

    <style name="OverflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">

    <item name="android:src">@drawable/ic_overflow_button</item>
    </style>


</resources>