<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thinkupstudios.anmat.vademecum.DetallePrincipioActivoActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_principio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:text="@string/dummy_long_text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_no_resultados"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_principio"
                android:padding="5dp"
                android:textSize="25sp"
                android:textStyle="bold" />

            <view
                android:id="@+id/col_accion_terapeutica"
                class="com.thinkupstudios.anmat.vademecum.components.CollapsibleContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_principio"

                app:content="Esto es contenido de prueba"
                app:header="@string/lbl_accion_terapeutica" />

            <view
                android:id="@+id/col_indicaciones"
                class="com.thinkupstudios.anmat.vademecum.components.CollapsibleContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/col_accion_terapeutica"
                app:content="Esto es contenido de prueba"
                app:header="@string/lbl_indicaciones" />

            <view
                android:id="@+id/col_presentacion"
                class="com.thinkupstudios.anmat.vademecum.components.CollapsibleContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/col_indicaciones"
                app:content="Esto es contenido de prueba"
                app:header="@string/presentacion" />

            <view
                android:id="@+id/col_posologia"
                class="com.thinkupstudios.anmat.vademecum.components.CollapsibleContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/col_presentacion"
                app:content="Esto es contenido de prueba"
                app:header="@string/lbl_posologia" />

            <view
                android:id="@+id/col_duracion"
                class="com.thinkupstudios.anmat.vademecum.components.CollapsibleContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/col_posologia"
                app:content="Esto es contenido de prueba"
                app:header="@string/lbl_duracion" />

            <view
                android:id="@+id/col_contraindicaciones"
                class="com.thinkupstudios.anmat.vademecum.components.CollapsibleContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/col_duracion"
                app:content="Esto es contenido de prueba"
                app:header="@string/lbl_contraindicaciones" />

            <view
                android:id="@+id/col_observaciones"
                class="com.thinkupstudios.anmat.vademecum.components.CollapsibleContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/col_contraindicaciones"
                app:content="Esto es contenido de prueba"
                app:header="@string/lbl_observaciones" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
