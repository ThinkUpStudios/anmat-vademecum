<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/button_txt_search"
    android:id="@+id/ly_header">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contraindicaciones, reacciones, advertencias"
        android:layout_gravity="right|center_vertical"
        android:id="@+id/txt_header"
        android:ellipsize="end"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:maxWidth="@dimen/maximo_linea_con_icono" />
<ImageView

    android:id="@+id/stat_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="centerInside"
    android:layout_alignParentEnd="true"
    android:layout_alignBottom="@id/txt_header"
    android:layout_alignTop="@id/txt_header"
    android:layout_alignParentRight="true"
    android:src="@android:drawable/arrow_down_float"
    android:contentDescription="statIcon"
    android:minWidth="@dimen/tamnio_minimo_imagen"
    android:minHeight="@dimen/tamnio_minimo_imagen"
    android:nestedScrollingEnabled="false" />
</RelativeLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:padding="20dp"

        android:id="@+id/txt_content"
        />
</LinearLayout>