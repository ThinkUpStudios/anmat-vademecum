<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/dropzonescss")
        @Scripts.Render("~/bundles/modernizr")

        <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Images/logo-anmat.png")" />
                    </a>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Subir Datos", "Index", "DataUpload")</li>
                            <li>@Html.ActionLink("Ver Jobs", "Jobs", "DataUpload")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Anmat Manager</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/dropzonescripts")

        <script src="@Url.Content("~/Scripts/notify.js")"></script>
        <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
       
        @RenderSection("scripts", required: false)
    </body>
</html>
